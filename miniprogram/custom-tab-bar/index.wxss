.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80px;
  z-index: 10;
}

.tab-bar-container{
  margin: 0 auto;
  width: 95%;
  height: 100%;
  background: linear-gradient(#f8e6ad, #f8d2ad); /* 默认从上到下渐变 */
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  box-shadow: 0 7rpx 0rpx rgba(0, 0, 0, 0.2);  
}


.tab-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-icon {
  width: 50px;
  height: 50px;
}

.tab-text {
  font-size: 12px;
  margin-top: 2px;
}
