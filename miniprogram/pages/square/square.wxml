    <input class="input1" bindinput="bindKeyInput" value="{{item.comment}}" data-index="{{index}}"></input>
    <van-button color="#1fdbae" class="vantbutton" type="primary" round bind:tap="send" data-index="{{index}}" >发送</van-button>
