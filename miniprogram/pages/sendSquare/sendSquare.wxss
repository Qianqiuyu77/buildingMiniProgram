.container {
  width: 100vw;
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}
.input-group{
  width: 80vw;
}
.input-group textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: none;
  border-radius: 10rpx;
  background-color: white;
  font-size: 32rpx;
  resize: none;
}
.img-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.img-container {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.img-preview {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  object-fit: cover;
}

.delete-icon {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 30rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
}

.add-img {
  width: 180rpx;
  height: 180rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 100rpx;
  color: #ccc;
  border: 1px dashed #ccc;
}

.submit-btn {
  left: 50%;
  transform: translateX(-50%);
  width: 180rpx;
  height: 80rpx;
  background-color: #07c160;
  color: white;
  padding: 20rpx 0;
  line-height: 35rpx;
  border-radius: 10rpx;
  font-size: 36rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}
